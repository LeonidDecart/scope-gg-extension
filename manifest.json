{
  "manifest_version": 3,
  "name": "Scope.gg Compilation Helper",
  "version": "1.0.0",
  "description": "Помощник для создания компиляций на Scope.gg",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://app.scope.gg/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.scope.gg/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Scope.gg Helper",
    "default_icon": "favicon.ico"
  },
  "icons": {
    "16": "favicon.ico",
    "32": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  }
}
